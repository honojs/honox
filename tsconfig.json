{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client",
      "vitest/globals"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "include": [
    "src",
    "test-integration",
    "test-e2e",
    "mocks",
  ],
  "exclude": [
    "mocks/app-alias"
  ]
}